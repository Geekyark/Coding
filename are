#include <iostream>
using namespace std;

int main()
{
    int n;
    int sum1=0,sum=0,i,j;
    cin>>n;
    int arr[n];
    for(i=0;i<n;i++)
    cin>>arr[i];
        for(i=0;i<(n-1)/2;i++)
        {
            sum+=arr[i];
        }
        for(j=(n-1)/2;j<n-1;j++)
        {
            sum1+=arr[j];
        }
    if(arr[n-1]==sum && arr[n-1]==sum1)
    {
        cout<<"YES";
    }
    else
        cout<<"NO";
}
